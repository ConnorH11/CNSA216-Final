@{
    ViewData["Title"] = "Login Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        * {
            box-sizing: border-box;
        }
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: rgb(138, 183, 190);
        }
        
        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .login-box {
            background-color: #fff;
            padding: 2rem;
            border-radius: 6px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
            max-width: 400px;
            width: 90%;
        }

        h1 {
            margin-top: 0;
            margin-bottom: 1.5rem;
            font-size: 1.8rem;
            text-align: center;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .form-group input[type="text"],
        .form-group input[type="password"] {
            width: 100%;
            padding: 0.5rem;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .button-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 1.5rem;
        }
       
        input[type="submit"],
        input[type="button"] {
            cursor: pointer;
            padding: 0.6rem 1.2rem;
            border: none;
            border-radius: 4px;
            background-color: #3d7ea6;
            color: #fff;
            font-size: 1rem;
            font-weight: 600;
            transition: background 0.2s ease;
        }

        input[type="submit"]:hover,
        input[type="button"]:hover {
            background-color: #2e5f78;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-box">
            <h1>Login Portal</h1>
            <form method="post" action="/Account/LoginUser"> 
                
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" />
                </div>
                
                <div class="form-group">
                    <label for="pass">Password</label>
                    <input type="password" id="pass" name="password" />
                </div>

                <div class="button-row">
                    <input type="submit" value="Sign in" />
                    <input type="button" value="Create an account" onclick="location.href='/Account/RegistryPage';" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>
